{% extends "Master/MenuTemplate.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-sync-alt fa-fw"></i> WooSync Configuration
                    </h6>
                    <div class="small">
                        Status: 
                        {% if fsc.getSetting('WooSync', 'woocommerce_url', '') %}
                            <span class="badge badge-success">Configured</span>
                        {% else %}
                            <span class="badge badge-warning">Not configured</span>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <!-- Success Message -->
                    {% if app.request.query.has('saved') and app.request.query.get('saved') == '1' %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> 
                            <strong>Success!</strong> Settings have been saved.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                    
                    <!-- Error Message (if we had validation errors) -->
                    {% if error is defined %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> 
                            {{ error }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                    
                    <!-- Current Settings Info -->
                    {% set currentUrl = fsc.getSetting('WooSync', 'woocommerce_url', '') %}
                    {% if currentUrl %}
                        <div class="alert alert-info small">
                            <i class="fas fa-info-circle"></i> 
                            <strong>Current configuration:</strong><br>
                            URL: <code>{{ currentUrl }}</code><br>
                            Last saved: Just now
                        </div>
                    {% endif %}
                    
                    <form method="post" action="{{ fsc.url() }}">
                        <input type="hidden" name="action" value="save">
                        
                        <div class="form-group">
                            <label for="woocommerce_url">WooCommerce Store URL *</label>
                            <input type="url" id="woocommerce_url" name="woocommerce_url" 
                                   class="form-control" 
                                   value="{{ fsc.getSetting('WooSync', 'woocommerce_url', '') }}"
                                   placeholder="https://yourstore.com" required>
                            <small class="form-text text-muted">
                                Must be a valid HTTPS URL (e.g., https://yourstore.com)
                            </small>
                        </div>
                        
                        <div class="form-group">
                            <label for="woocommerce_key">Consumer Key *</label>
                            <input type="text" id="woocommerce_key" name="woocommerce_key" 
                                   class="form-control" 
                                   value="{{ fsc.getSetting('WooSync', 'woocommerce_key', '') }}"
                                   required>
                            <small class="form-text text-muted">
                                Consumer key from WooCommerce REST API
                            </small>
                        </div>
                        
                        <div class="form-group">
                            <label for="woocommerce_secret">Consumer Secret *</label>
                            <input type="password" id="woocommerce_secret" name="woocommerce_secret" 
                                   class="form-control" 
                                   value="{{ fsc.getSetting('WooSync', 'woocommerce_secret', '') }}"
                                   required>
                            <small class="form-text text-muted">
                                Consumer secret from WooCommerce REST API
                            </small>
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save fa-fw"></i> Save Settings
                            </button>
                            
                            <button type="reset" class="btn btn-secondary">
                                <i class="fas fa-undo fa-fw"></i> Reset Form
                            </button>
                        </div>
                    </form>
                    
                    <hr class="my-4">
                    
                    <!-- Test Connection Button (will implement later) -->
                    {% if fsc.getSetting('WooSync', 'woocommerce_url', '') %}
                        <div class="card border-info">
                            <div class="card-body">
                                <h6 class="card-title text-info">
                                    <i class="fas fa-plug fa-fw"></i> Test Connection
                                </h6>
                                <p class="card-text">
                                    Once you've saved your settings, you can test the connection to WooCommerce.
                                </p>
                                <a href="#" class="btn btn-outline-info" id="testConnectionBtn">
                                    <i class="fas fa-plug fa-fw"></i> Test WooCommerce Connection
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Form validation
document.addEventListener('DOMContentLoaded', function() {
    var form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(e) {
            var url = document.getElementById('woocommerce_url').value;
            var key = document.getElementById('woocommerce_key').value;
            var secret = document.getElementById('woocommerce_secret').value;
            
            // Basic validation
            if (!url || !key || !secret) {
                e.preventDefault();
                alert('Please fill in all required fields marked with *');
                return false;
            }
            
            // URL validation
            if (!url.startsWith('https://')) {
                e.preventDefault();
                alert('URL must start with https:// for security');
                return false;
            }
            
            // Show loading indicator
            var submitBtn = form.querySelector('button[type="submit"]');
            if (submitBtn) {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin fa-fw"></i> Saving...';
                submitBtn.disabled = true;
            }
            
            return true;
        });
    }
    
    // Test connection button
    var testBtn = document.getElementById('testConnectionBtn');
    if (testBtn) {
        testBtn.addEventListener('click', function(e) {
            e.preventDefault();
            alert('Test connection feature will be implemented in the next update. First, make sure your settings are saved correctly.');
        });
    }
});
</script>
{% endblock %}
