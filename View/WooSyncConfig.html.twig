{% extends "Master/MenuTemplate.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-sync-alt fa-fw"></i> WooSync Configuration
                    </h6>
                    <div class="small">
                        Status: 
                        {% if fsc.woocommerce_url %}
                            <span class="badge badge-success">Configured âœ“</span>
                        {% else %}
                            <span class="badge badge-warning">Not configured</span>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <!-- Success Message from Save -->
                    {% if app.request.query.has('saved') and app.request.query.get('saved') == '1' %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> 
                            <strong>Success!</strong> WooSync settings have been saved successfully.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                    
                    <!-- Query Parameter Messages (for test/sync actions) -->
                    {% if app.request.query.has('message') and app.request.query.has('type') %}
                        {% set message = app.request.query.get('message') %}
                        {% set type = app.request.query.get('type') %}
                        
                        {% if type == 'success' %}
                            {% set alert_class = 'alert-success' %}
                            {% set icon = 'fas fa-check-circle' %}
                        {% elseif type == 'error' %}
                            {% set alert_class = 'alert-danger' %}
                            {% set icon = 'fas fa-exclamation-circle' %}
                        {% elseif type == 'info' %}
                            {% set alert_class = 'alert-info' %}
                            {% set icon = 'fas fa-info-circle' %}
                        {% else %}
                            {% set alert_class = 'alert-warning' %}
                            {% set icon = 'fas fa-exclamation-triangle' %}
                        {% endif %}
                        
                        <div class="alert {{ alert_class }} alert-dismissible fade show" role="alert">
                            <i class="{{ icon }}"></i> 
                            {{ message|raw }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                    
                    <!-- Current Configuration Info -->
                    {% if fsc.woocommerce_url %}
                        <div class="alert alert-info mb-4">
                            <i class="fas fa-info-circle"></i> 
                            <strong>Current Configuration:</strong><br>
                            Store URL: <code>{{ fsc.woocommerce_url }}</code><br>
                            {% if fsc.woocommerce_key %}
                                API Key: Configured ({{ fsc.woocommerce_key|length }} characters)<br>
                                API Secret: Configured (hidden for security)
                            {% endif %}
                        </div>
                    {% endif %}
                    
                    <!-- Configuration Form -->
                    <form method="post" action="{{ fsc.url() }}">
                        <input type="hidden" name="action" value="save">
                        
                        <div class="form-group">
                            <label for="woocommerce_url">WooCommerce Store URL *</label>
                            <input type="url" id="woocommerce_url" name="woocommerce_url" 
                                   class="form-control" 
                                   value="{{ fsc.woocommerce_url }}"
                                   placeholder="https://yourstore.com" required>
                            <small class="form-text text-muted">
                                Must be a valid HTTPS URL (e.g., https://yourstore.com)
                            </small>
                        </div>
                        
                        <div class="form-group">
                            <label for="woocommerce_key">Consumer Key *</label>
                            <input type="text" id="woocommerce_key" name="woocommerce_key" 
                                   class="form-control" 
                                   value="{{ fsc.woocommerce_key }}"
                                   required>
                            <small class="form-text text-muted">
                                Consumer key from WooCommerce REST API
                            </small>
                        </div>
                        
                        <div class="form-group">
                            <label for="woocommerce_secret">Consumer Secret *</label>
                            <input type="password" id="woocommerce_secret" name="woocommerce_secret" 
                                   class="form-control" 
                                   value="{{ fsc.woocommerce_secret }}"
                                   required>
                            <small class="form-text text-muted">
                                Consumer secret from WooCommerce REST API
                            </small>
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save fa-fw"></i> 
                                {% if fsc.woocommerce_url %}Update Settings{% else %}Save Settings{% endif %}
                            </button>
                            
                            {% if fsc.woocommerce_url %}
                                <a href="{{ fsc.url() }}?action=test" class="btn btn-info ml-2" onclick="return confirm('Test connection with current settings?')">
                                    <i class="fas fa-plug fa-fw"></i> Test Connection
                                </a>
                                
                                <a href="{{ fsc.url() }}?action=sync" class="btn btn-success ml-2" onclick="return confirm('Start full synchronization?')">
                                    <i class="fas fa-sync-alt fa-fw"></i> Sync Now
                                </a>
                            {% endif %}
                        </div>
                    </form>
                    
                    <!-- Sync Options Section -->
                    {% if fsc.woocommerce_url %}
                        <hr class="my-4">
                        <div class="card border-success">
                            <div class="card-header bg-success text-white">
                                <i class="fas fa-sync-alt fa-fw"></i> Synchronization Options
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <h6><i class="fas fa-shopping-cart fa-fw"></i> Order Sync</h6>
                                        <p class="small">Import WooCommerce orders to FacturaScripts:</p>
                                        <ul class="small">
                                            <li>Import new orders as customers</li>
                                            <li>Create invoices from orders</li>
                                            <li>Update order status</li>
                                        </ul>
                                        <a href="{{ fsc.url() }}?action=sync-orders" class="btn btn-outline-primary btn-sm" onclick="return confirm('Import orders from WooCommerce?')">
                                            <i class="fas fa-download fa-fw"></i> Import Orders
                                        </a>
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <h6><i class="fas fa-cubes fa-fw"></i> Product Sync</h6>
                                        <p class="small">Synchronize products between systems:</p>
                                        <ul class="small">
                                            <li>Import WooCommerce products</li>
                                            <li>Sync stock quantities</li>
                                            <li>Update prices</li>
                                        </ul>
                                        <a href="{{ fsc.url() }}?action=sync-products" class="btn btn-outline-primary btn-sm" onclick="return confirm('Sync products from WooCommerce?')">
                                            <i class="fas fa-exchange-alt fa-fw"></i> Sync Products
                                        </a>
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <h6><i class="fas fa-boxes fa-fw"></i> Stock Sync</h6>
                                        <p class="small">Update stock levels:</p>
                                        <ul class="small">
                                            <li>Sync stock quantities</li>
                                            <li>Update inventory levels</li>
                                            <li>Manage low stock alerts</li>
                                        </ul>
                                        <a href="{{ fsc.url() }}?action=sync-stock" class="btn btn-outline-primary btn-sm" onclick="return confirm('Update stock levels?')">
                                            <i class="fas fa-boxes fa-fw"></i> Update Stock
                                        </a>
                                    </div>
                                </div>
                                
                                <div class="mt-4">
                                    <h6><i class="fas fa-history fa-fw"></i> Sync History</h6>
                                    <p class="small text-muted mb-1">Last sync: Never</p>
                                    <p class="small text-muted">Total orders synced: 0 | Total products synced: 0</p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- API Information -->
                        <div class="card border-info mt-4">
                            <div class="card-header bg-info text-white">
                                <i class="fas fa-code fa-fw"></i> API Information
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>WooCommerce API Status</h6>
                                        <ul class="small">
                                            <li>API Version: v3</li>
                                            <li>Connection: {% if fsc.woocommerce_url %}Configured{% else %}Not configured{% endif %}</li>
                                            <li>URL: <code>{{ fsc.woocommerce_url }}</code></li>
                                        </ul>
                                    </div>
                                    <div class="col-md-6">
                                        <h6>Next Steps</h6>
                                        <ol class="small">
                                            <li>Test the connection</li>
                                            <li>Configure sync settings</li>
                                            <li>Run a test sync</li>
                                            <li>Set up automatic sync</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Form validation
document.addEventListener('DOMContentLoaded', function() {
    var form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(e) {
            var url = document.getElementById('woocommerce_url').value;
            var key = document.getElementById('woocommerce_key').value;
            var secret = document.getElementById('woocommerce_secret').value;
            
            // Basic validation
            if (!url || !key || !secret) {
                e.preventDefault();
                alert('Please fill in all required fields marked with *');
                return false;
            }
            
            // URL validation
            if (!url.startsWith('https://')) {
                e.preventDefault();
                alert('URL must start with https:// for security');
                return false;
            }
            
            // Show loading indicator
            var submitBtn = form.querySelector('button[type="submit"]');
            if (submitBtn) {
                var originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin fa-fw"></i> Saving...';
                submitBtn.disabled = true;
                
                // Restore button after 5 seconds (in case of error)
                setTimeout(function() {
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }, 5000);
            }
            
            return true;
        });
    }
    
    // Add confirmations to sync buttons
    var syncButtons = document.querySelectorAll('a[href*="action=sync"], a[href*="action=test"]');
    syncButtons.forEach(function(button) {
        if (!button.onclick) {
            var href = button.getAttribute('href');
            if (href.includes('action=test')) {
                button.addEventListener('click', function(e) {
                    if (!confirm('Test connection with current settings?')) {
                        e.preventDefault();
                    }
                });
            } else if (href.includes('action=sync')) {
                button.addEventListener('click', function(e) {
                    if (!confirm('This will synchronize data with WooCommerce. Continue?')) {
                        e.preventDefault();
                    }
                });
            }
        }
    });
});
</script>
{% endblock %}
