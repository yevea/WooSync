{% extends "Master/MenuTemplate.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-sync-alt fa-fw"></i> WooSync Configuration
                    </h6>
                    <div class="small">
                        Status: 
                        {% set currentUrl = fsc.getSetting('WooSync', 'woocommerce_url', '') %}
                        {% if currentUrl %}
                            <span class="badge badge-success">Configured âœ“</span>
                        {% else %}
                            <span class="badge badge-warning">Not configured</span>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <!-- Success Message -->
                    {% if app.request.query.has('saved') and app.request.query.get('saved') == '1' %}
                        {% set currentUrl = fsc.getSetting('WooSync', 'woocommerce_url', '') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> 
                            <strong>Success!</strong> WooSync settings have been saved successfully.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                    
                    {% set currentUrl = fsc.getSetting('WooSync', 'woocommerce_url', '') %}
                    {% set currentKey = fsc.getSetting('WooSync', 'woocommerce_key', '') %}
                    {% set currentSecret = fsc.getSetting('WooSync', 'woocommerce_secret', '') %}
                    
                    {% if currentUrl %}
                        <div class="alert alert-info mb-4">
                            <i class="fas fa-info-circle"></i> 
                            <strong>Current Configuration:</strong><br>
                            Store URL: <code>{{ currentUrl }}</code><br>
                            API Key: Configured ({{ currentKey|length }} characters)<br>
                            API Secret: Configured ({{ currentSecret|length }} characters)
                        </div>
                    {% endif %}
                    
                    <form method="post" action="{{ fsc.url() }}">
                        <input type="hidden" name="action" value="save">
                        
                        <div class="form-group">
                            <label for="woocommerce_url">WooCommerce Store URL *</label>
                            <input type="url" id="woocommerce_url" name="woocommerce_url" 
                                   class="form-control" 
                                   value="{{ currentUrl }}"
                                   placeholder="https://yourstore.com" required>
                            <small class="form-text text-muted">
                                Must be a valid HTTPS URL (e.g., https://yourstore.com)
                            </small>
                        </div>
                        
                        <div class="form-group">
                            <label for="woocommerce_key">Consumer Key *</label>
                            <input type="text" id="woocommerce_key" name="woocommerce_key" 
                                   class="form-control" 
                                   value="{{ currentKey }}"
                                   required>
                            <small class="form-text text-muted">
                                Consumer key from WooCommerce REST API
                            </small>
                        </div>
                        
                        <div class="form-group">
                            <label for="woocommerce_secret">Consumer Secret *</label>
                            <input type="password" id="woocommerce_secret" name="woocommerce_secret" 
                                   class="form-control" 
                                   value="{{ currentSecret }}"
                                   required>
                            <small class="form-text text-muted">
                                Consumer secret from WooCommerce REST API
                            </small>
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save fa-fw"></i> 
                                {% if currentUrl %}Update Settings{% else %}Save Settings{% endif %}
                            </button>
                            
                            {% if currentUrl %}
                                <a href="{{ fsc.url() }}?action=test" class="btn btn-info ml-2">
                                    <i class="fas fa-plug fa-fw"></i> Test Connection
                                </a>
                            {% endif %}
                        </div>
                    </form>
                    
                    {% if currentUrl %}
                        <hr class="my-4">
                        <div class="card border-success">
                            <div class="card-header bg-success text-white">
                                <i class="fas fa-check-circle fa-fw"></i> Next Steps
                            </div>
                            <div class="card-body">
                                <p>Your WooCommerce connection is configured. You can now:</p>
                                <ol>
                                    <li><strong>Test the connection</strong> - Verify API access works</li>
                                    <li><strong>Configure synchronization</strong> - Set up what data to sync</li>
                                    <li><strong>Run manual sync</strong> - Import orders/products immediately</li>
                                    <li><strong>Enable auto-sync</strong> - Set up automatic synchronization</li>
                                </ol>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Form validation
document.addEventListener('DOMContentLoaded', function() {
    var form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(e) {
            var url = document.getElementById('woocommerce_url').value;
            var key = document.getElementById('woocommerce_key').value;
            var secret = document.getElementById('woocommerce_secret').value;
            
            // Basic validation
            if (!url || !key || !secret) {
                e.preventDefault();
                alert('Please fill in all required fields marked with *');
                return false;
            }
            
            // URL validation
            if (!url.startsWith('https://')) {
                e.preventDefault();
                alert('URL must start with https:// for security');
                return false;
            }
            
            // Show loading indicator
            var submitBtn = form.querySelector('button[type="submit"]');
            if (submitBtn) {
                var originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin fa-fw"></i> Saving...';
                submitBtn.disabled = true;
                
                // Restore button after 5 seconds (in case of error)
                setTimeout(function() {
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }, 5000);
            }
            
            return true;
        });
    }
});
</script>
{% endblock %}
