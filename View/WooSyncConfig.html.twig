{% extends "Master/MenuTemplate.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-sync-alt fa-fw"></i> Sincronizar Tienda
                    </h6>
                    <div class="small">
                        Status: 
                        {% if fsc.woocommerce_url %}
                            <span class="badge badge-success">Configured ✓</span>
                        {% else %}
                            <span class="badge badge-warning">Not configured</span>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <!-- Error Messages -->
                    {% if fsc.last_error %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> 
                            <strong>Error:</strong> {{ fsc.last_error }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}

                    <!-- Success Messages -->
                    {% if fsc.last_success %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> 
                            <strong>Success:</strong> {{ fsc.last_success }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}

                    <!-- Quick Action Buttons (shown when configured) -->
                    {% if fsc.woocommerce_url %}
                        <h5 class="mb-3"><i class="fas fa-bolt fa-fw"></i> Quick Actions</h5>
                        
                        <!-- Timeout Warning -->
                        <div class="alert alert-warning">
                            <h6><i class="fas fa-exclamation-triangle"></i> Large Store? Use Individual Syncs!</h6>
                            <p class="mb-0 small">
                                If you have many products/orders, "Sync All" may timeout. 
                                <strong>For large stores (100+ items), use the individual sync buttons below instead.</strong>
                                This ensures each operation completes successfully.
                            </p>
                        </div>
                        
                        <div class="btn-group d-flex mb-4" role="group">
                            <a href="{{ fsc.url() }}?action=test" class="btn btn-info flex-fill">
                                <i class="fas fa-plug fa-fw"></i> Test Connection
                            </a>
                            <a href="{{ fsc.url() }}?action=sync" class="btn btn-success flex-fill" 
                               onclick="return confirm('This will sync all data. For large stores, this may timeout - consider using individual sync buttons instead. Continue?');">
                                <i class="fas fa-sync-alt fa-fw"></i> Sync All
                            </a>
                        </div>
                    {% endif %}
                    
                    <!-- Sync Options (only shown when configured) -->
                    {% if fsc.woocommerce_url %}
                        <div class="card border-primary">
                            <div class="card-header bg-primary text-white">
                                <i class="fas fa-cogs fa-fw"></i> Individual Sync Operations
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body text-center">
                                                <i class="fas fa-percentage fa-2x text-primary mb-3"></i>
                                                <h6>Taxes</h6>
                                                <p class="small text-muted">Import tax rates from WooCommerce</p>
                                                <a href="{{ fsc.url() }}?action=sync-taxes" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-download fa-fw"></i> Sync Taxes
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body text-center">
                                                <i class="fas fa-cube fa-2x text-primary mb-3"></i>
                                                <h6>Products</h6>
                                                <p class="small text-muted">Sync products and prices</p>
                                                <a href="{{ fsc.url() }}?action=sync-products" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-exchange-alt fa-fw"></i> Sync Products
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body text-center">
                                                <i class="fas fa-users fa-2x text-primary mb-3"></i>
                                                <h6>Customers</h6>
                                                <p class="small text-muted">Import customer data</p>
                                                <a href="{{ fsc.url() }}?action=sync-customers" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-user-plus fa-fw"></i> Sync Customers
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body text-center">
                                                <i class="fas fa-shopping-cart fa-2x text-primary mb-3"></i>
                                                <h6>Orders</h6>
                                                <p class="small text-muted">Import WooCommerce orders</p>
                                                <a href="{{ fsc.url() }}?action=sync-orders" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-download fa-fw"></i> Sync Orders
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body text-center">
                                                <i class="fas fa-boxes fa-2x text-primary mb-3"></i>
                                                <h6>Stock</h6>
                                                <p class="small text-muted">Update stock levels</p>
                                                <a href="{{ fsc.url() }}?action=sync-stock" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-warehouse fa-fw"></i> Sync Stock
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Info Card -->
                        <div class="alert alert-info mt-4">
                            <h6><i class="fas fa-info-circle"></i> Synchronization Notes</h6>
                            <ul class="mb-0">
                                <li><strong>One-way sync:</strong> WooCommerce → FacturaScripts only</li>
                                <li><strong>For small stores (&lt;100 items):</strong> Use "Sync All" button above</li>
                                <li><strong>For large stores (100+ items):</strong> Use individual sync buttons to avoid timeouts</li>
                                <li><strong>Recommended order:</strong> Taxes → Products → Customers → Orders → Stock</li>
                                <li><strong>Batch sizes:</strong> Processes 10-20 items per page to optimize speed</li>
                                <li>All sync operations are logged for troubleshooting</li>
                            </ul>
                        </div>
                    {% endif %}

                    <!-- Configuration Form (at the bottom - infrequent usage) -->
                    <hr class="my-4">
                    <h5 class="mb-3"><i class="fas fa-cog fa-fw"></i> WooCommerce Configuration</h5>
                    <form method="POST" action="{{ fsc.url() }}">
                        <input type="hidden" name="action" value="save">
                        
                        <div class="form-group">
                            <label for="woocommerce_url">WooCommerce URL *</label>
                            <input type="url" id="woocommerce_url" name="woocommerce_url" 
                                   class="form-control" 
                                   value="{{ fsc.woocommerce_url }}"
                                   placeholder="https://yourstore.com"
                                   required>
                            <small class="form-text text-muted">
                                Base URL of your WooCommerce installation (must start with https://)
                            </small>
                        </div>
                        
                        <div class="form-group">
                            <label for="woocommerce_key">Consumer Key *</label>
                            <input type="text" id="woocommerce_key" name="woocommerce_key" 
                                   class="form-control" 
                                   value="{{ fsc.woocommerce_key }}"
                                   required>
                            <small class="form-text text-muted">
                                From WooCommerce → Settings → Advanced → REST API
                            </small>
                        </div>
                        
                        <div class="form-group">
                            <label for="woocommerce_secret">Consumer Secret *</label>
                            <input type="password" id="woocommerce_secret" name="woocommerce_secret" 
                                   class="form-control" 
                                   value="{{ fsc.woocommerce_secret }}"
                                   required>
                            <small class="form-text text-muted">
                                From WooCommerce → Settings → Advanced → REST API
                            </small>
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save fa-fw"></i> 
                                {% if fsc.woocommerce_url %}Update Settings{% else %}Save Settings{% endif %}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Form validation
document.addEventListener('DOMContentLoaded', function() {
    var form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(e) {
            var url = document.getElementById('woocommerce_url').value;
            var key = document.getElementById('woocommerce_key').value;
            var secret = document.getElementById('woocommerce_secret').value;
            
            if (!url || !key || !secret) {
                e.preventDefault();
                alert('Please fill in all required fields.');
                return false;
            }
            
            if (!url.startsWith('https://')) {
                e.preventDefault();
                alert('URL must start with https://');
                return false;
            }
            
            // Show loading indicator
            var submitBtn = form.querySelector('button[type="submit"]');
            if (submitBtn) {
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin fa-fw"></i> Saving...';
            }
        });
    }
});
</script>

{% endblock %}
