{% extends "Master/MenuTemplate.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-sync-alt fa-fw"></i> WooSync Configuration
                    </h6>
                    <div class="small">
                        Status: 
                        {% if fsc.woocommerce_url %}
                            <span class="badge badge-success">Configured âœ“</span>
                        {% else %}
                            <span class="badge badge-warning">Not configured</span>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <!-- Success Message -->
                    {% if app.request.query.has('saved') and app.request.query.get('saved') == '1' %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> 
                            <strong>Success!</strong> WooSync settings have been saved successfully.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                    
                    {% if fsc.woocommerce_url %}
                        <div class="alert alert-info mb-4">
                            <i class="fas fa-info-circle"></i> 
                            <strong>Current Configuration:</strong><br>
                            Store URL: <code>{{ fsc.woocommerce_url }}</code><br>
                            {% if fsc.woocommerce_key %}
                                API Key: Configured ({{ fsc.woocommerce_key|length }} characters)<br>
                                API Secret: Configured (hidden for security)
                            {% endif %}
                        </div>
                    {% endif %}
                    
                    <form method="post" action="{{ fsc.url() }}">
                        <input type="hidden" name="action" value="save">
                        
                        <div class="form-group">
                            <label for="woocommerce_url">WooCommerce Store URL *</label>
                            <input type="url" id="woocommerce_url" name="woocommerce_url" 
                                   class="form-control" 
                                   value="{{ fsc.woocommerce_url }}"
                                   placeholder="https://yourstore.com" required>
                            <small class="form-text text-muted">
                                Must be a valid HTTPS URL (e.g., https://yourstore.com)
                            </small>
                        </div>
                        
                        <div class="form-group">
                            <label for="woocommerce_key">Consumer Key *</label>
                            <input type="text" id="woocommerce_key" name="woocommerce_key" 
                                   class="form-control" 
                                   value="{{ fsc.woocommerce_key }}"
                                   required>
                            <small class="form-text text-muted">
                                Consumer key from WooCommerce REST API
                            </small>
                        </div>
                        
                        <div class="form-group">
                            <label for="woocommerce_secret">Consumer Secret *</label>
                            <input type="password" id="woocommerce_secret" name="woocommerce_secret" 
                                   class="form-control" 
                                   value="{{ fsc.woocommerce_secret }}"
                                   required>
                            <small class="form-text text-muted">
                                Consumer secret from WooCommerce REST API
                            </small>
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save fa-fw"></i> 
                                {% if fsc.woocommerce_url %}Update Settings{% else %}Save Settings{% endif %}
                            </button>
                            
                            {% if fsc.woocommerce_url %}
                                <a href="{{ fsc.url() }}?action=test" class="btn btn-info ml-2">
                                    <i class="fas fa-plug fa-fw"></i> Test Connection
                                </a>
                                
                                <a href="{{ fsc.url() }}?action=sync" class="btn btn-success ml-2">
                                    <i class="fas fa-sync-alt fa-fw"></i> Sync Now
                                </a>
                            {% endif %}
                        </div>
                    </form>
                    
                    {% if fsc.woocommerce_url %}
                        <hr class="my-4">
                        <div class="card border-success">
                            <div class="card-header bg-success text-white">
                                <i class="fas fa-sync-alt fa-fw"></i> Synchronization Options
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6><i class="fas fa-shopping-cart fa-fw"></i> Order Sync</h6>
                                        <p>Synchronize WooCommerce orders to FacturaScripts:</p>
                                        <ul class="small">
                                            <li>Import new orders as customers</li>
                                            <li>Create invoices from orders</li>
                                            <li>Update order status</li>
                                        </ul>
                                    </div>
                                    <div class="col-md-6">
                                        <h6><i class="fas fa-cubes fa-fw"></i> Product Sync</h6>
                                        <p>Synchronize products between systems:</p>
                                        <ul class="small">
                                            <li>Import WooCommerce products</li>
                                            <li>Sync stock quantities</li>
                                            <li>Update prices</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="text-center mt-3">
                                    <div class="btn-group">
                                        <a href="{{ fsc.url() }}?action=sync-orders" class="btn btn-outline-primary">
                                            <i class="fas fa-download fa-fw"></i> Import Orders
                                        </a>
                                        <a href="{{ fsc.url() }}?action=sync-products" class="btn btn-outline-primary">
                                            <i class="fas fa-exchange-alt fa-fw"></i> Sync Products
                                        </a>
                                        <a href="{{ fsc.url() }}?action=sync-stock" class="btn btn-outline-primary">
                                            <i class="fas fa-boxes fa-fw"></i> Update Stock
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}

<!-- Flash Messages -->
{% if app.session.flashbag.peekAll|length > 0 %}
    {% for type, messages in app.session.flashbag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                <i class="fas fa-{{ type == 'success' ? 'check-circle' : (type == 'error' ? 'exclamation-circle' : 'info-circle') }}"></i> 
                {{ message|raw }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}

<!-- Session Flash Messages -->
{% if app.session.flashbag.peekAll|length > 0 %}
    {% for type, messages in app.session.flashbag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                {% if type == 'success' %}
                    <i class="fas fa-check-circle"></i>
                {% elseif type == 'error' %}
                    <i class="fas fa-exclamation-circle"></i>
                {% elseif type == 'info' %}
                    <i class="fas fa-info-circle"></i>
                {% else %}
                    <i class="fas fa-exclamation-triangle"></i>
                {% endif %}
                {{ message|raw }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Form validation
document.addEventListener('DOMContentLoaded', function() {
    var form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(e) {
            var url = document.getElementById('woocommerce_url').value;
            var key = document.getElementById('woocommerce_key').value;
            var secret = document.getElementById('woocommerce_secret').value;
            
            // Basic validation
            if (!url || !key || !secret) {
                e.preventDefault();
                alert('Please fill in all required fields marked with *');
                return false;
            }
            
            // URL validation
            if (!url.startsWith('https://')) {
                e.preventDefault();
                alert('URL must start with https:// for security');
                return false;
            }
            
            // Show loading indicator
            var submitBtn = form.querySelector('button[type="submit"]');
            if (submitBtn) {
                var originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin fa-fw"></i> Saving...';
                submitBtn.disabled = true;
                
                // Restore button after 5 seconds (in case of error)
                setTimeout(function() {
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }, 5000);
            }
            
            return true;
        });
    }
});
</script>
{% endblock %}
