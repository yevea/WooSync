{% extends "Master/MicroTemplate.html.twig" %}

{% block body %}
<div class="container py-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="fas fa-store fa-fw"></i> Online Store
            </h1>
            <p class="text-muted mb-0">Browse products published in FacturaScripts.</p>
        </div>
        <form method="get" action="{{ fsc.url() }}" class="mt-3 mt-md-0">
            <div class="input-group">
                <input type="text" class="form-control" name="q" placeholder="Search products"
                       value="{{ fsc.search }}">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search fa-fw"></i>
                </button>
            </div>
        </form>
    </div>

    {% if fsc.store_error %}
        <div class="alert alert-danger">{{ fsc.store_error }}</div>
    {% endif %}

    {% if fsc.products is empty %}
        <div class="alert alert-info">No products available.</div>
    {% else %}
        <div class="row">
            {% for product in fsc.products %}
                <div class="col-sm-6 col-lg-4 col-xl-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-2">
                                {{ product.display_name }}
                            </h5>
                            {% if product.show_reference %}
                                <p class="text-muted small mb-2">{{ product.referencia }}</p>
                            {% endif %}
                            <div class="mt-auto">
                                {% if product.pvp is not null %}
                                    <div class="h5 text-primary mb-1">
                                        {{ product.pvp | number_format(2, fsc.decimal_separator, fsc.thousands_separator) }} {{ fsc.currency_symbol }}
                                    </div>
                                {% else %}
                                    <div class="h6 text-muted mb-1">Price on request</div>
                                {% endif %}
                                <div class="small text-muted">Contact us to order.</div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <div class="text-center small text-muted mt-4">
        Powered by FacturaScripts + WooSync
    </div>
</div>
{% endblock %}
